{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "CommonJS",
    "target": "ES2020",

    /* Environment */
    "lib": ["ESNext"],
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,


    "strict": true,
    "skipLibCheck": true,


    "sourceMap": true,
    "declaration": false,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src/**/*"]
}
